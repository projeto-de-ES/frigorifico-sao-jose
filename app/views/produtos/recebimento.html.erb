<%= form_with(url: recebimento_produto_path, method: :post, local: true) do |form| %>
 <div style="position: relative; top: 50px;">
   <div class="row form-group">
    <div class="col-sm-6">
      <%= form.label "recebimento" %>
      <%= form.text_field "recebimento", class: "form-control" %>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-3">
      <%= form.submit "Salvar", class: "btn btn-success" %>
    </div>
  </div>
 </div>
<% end %>
